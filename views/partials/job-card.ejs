<div class="job-card">
    <h3 class="job-title">
        <%= job.title %>
    </h3>
    <p class="job-company"><strong>Company:</strong>
        <%= job.company %>
    </p>
    <p class="job-location"><strong>Location:</strong>
        <%= job.location %>
    </p>
    <p class="job-posted">
        <strong>Posted:</strong>
        <%= new Date(job.postedDate).toLocaleDateString("en-US", { year: "numeric" , month: "short" , day: "numeric" })
            %>
    </p>
    <p class="job-description">
        <%= job.description.length> 150 ? job.description.substring(0, 150) + "..." : job.description %>
    </p>
    <p class="job-location"><strong>Posted By:</strong>
        <%= job.postedBy %>
    </p>
    <a href="/jobs/<%= job._id %>" class="btn-primary">View Details</a>
</div>